<div class="cmf-menu">
    <ul>
        {% foreach entry in map %}
            <li>
                <a href="{{ todo: base url? ~ entry.url }}"
                    class="
                        {% if entry.children and count(entry.children) %}
                                children
                        {% endif %}
                    >{{ entry.title }}</a>
                {% if entry.children and count(entry.children) %}
                    {% include "SymfonyCMFNavigationBundle:Navigation:sitemap.html.twig" with {'map': entry.children} %}
                {% endif %}
            </li>
        {% endforeach %}
    </ul>
</div>
